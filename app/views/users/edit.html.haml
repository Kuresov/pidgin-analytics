%h1 Edit Account
.col-md-4
  = form_for @user, url: account_path do |f|
    - if @user.errors.any?
      .alert.alert-danger
        %h4 There is a problem with the information you submitted.
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

    = form_group_tag(@user.errors[:email]) do
      = f.label :email
      = f.email_field :email, class:'form-control', placeholder: "#{@user.email}"

    = form_group_tag(@user.errors[:current_password]) do
      = f.label :current_password
      = f.password_field :current_password, class:'form-control', placeholder: 'Current password'

    = form_group_tag(@user.errors[:password]) do
      = f.label :new_password
      = f.password_field :password, class:'form-control'

    = form_group_tag(@user.errors[:password]) do
      = f.label :password_confirmation
      = f.password_field :password_confirmation, class:'form-control'

    .actions
      = f.submit "Submit"

.col-md-8
